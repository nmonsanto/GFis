<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AfinMobil"
             x:Class="AfinMobil.MainPage">
    <ContentPage.Content>
            <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" BackgroundColor="Green" x:Name="main">
                <StackLayout x:Name="header" HeightRequest="30"  Orientation="Horizontal" HorizontalOptions="FillAndExpand" Padding="0" Margin="0"></StackLayout>
                <StackLayout x:Name="center" Orientation="Vertical" VerticalOptions="FillAndExpand" Padding="0" Margin="0,0,0,0">
                </StackLayout>
                <StackLayout x:Name="footer" HeightRequest="30" Orientation="Horizontal" HorizontalOptions="FillAndExpand"  Padding="0" Margin="0,0,0,0"></StackLayout>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>